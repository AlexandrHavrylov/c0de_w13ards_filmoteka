   <iframe class = "modal-movie__video" src="{{linkEmbed}}?autoplay=false&width=618" width="618" height="348" allowfullscreen="true" mozallowfullscreen="true"
      webkitallowfullscreen="true" frameborder="no" scrolling="no"></iframe>
