{{#each this}}
    <li class="film-card">
        <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}}" width="500" class="film-card__poster">
        <p class="film-card__title">{{title}}</p>
        <p class="film-card__descr">{{genre_ids}} | {{release_date}}</p>
    </li>
{{/each}}