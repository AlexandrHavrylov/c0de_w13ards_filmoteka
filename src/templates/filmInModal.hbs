<div class="modal-movie">

    <div class="modal-movie__img">
        <img src="https://image.tmdb.org/t/p/w240{{poster_path}}" alt="{{title}}" />
    </div>

    <div class="modal-movie__info">

        <h2 class="modal-movie__title">{{title}}</h2>

        <ul class="modal-movie__descr">
            <li class="modal-movie__item">
                <p class="modal-movie__descr-name">Vote / Votes</p>
                <p class="modal-movie__descr-info">
                    <span class="modal-movie__descr-vote">{{vote_average}}</span>
                    <span class="modal-movie__slash">/</span>
                    <span class="modal-movie__descr-votes">{{vote_count}}</span>
                </p>
            </li>
            <li class="modal-movie__item">
                <p class="modal-movie__descr-name">Popularity</p>
                <p class="modal-movie__descr-info">{{popularity}}</p>
            </li>
            <li class="modal-movie__item">
                <p class="modal-movie__descr-name">Original Title</p>
                <p class="modal-movie__descr-info">{{original_title}}</p>
            </li>
            <li class="modal-movie__item">
                <p class="modal-movie__descr-name">Genre</p>
                <p class="modal-movie__descr-info">
                    {{#each genres}}
                    <span class="modal-movie__genre">{{name}}</span>
                    {{/each}}
                </p>
            </li>
        </ul>

        <h3 class="modal-movie__about-title">About</h3>
        <p class="modal-movie__about">{{overview}}</p>

        <div class="modal-movie__button-wrapper">
            <button data-name="watched" class="modal-movie__button" type="button">add to watched</button>
            <button data-name="queue" class="modal-movie__button" type="button">add to queue</button>
        </div>

    </div>
</div>